<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundmain"
        android:backgroundTint="#A30A0A28"
        android:backgroundTintMode="src_atop"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/mercadinhosenai" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="Cadastrar Produtos"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="#FDFDFD"
            app:placeholderTextColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNameProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60000000"
                android:fontFamily="@font/amaranth"
                android:hint="Nome do Produto"
                android:inputType="text|textShortMessage"
                android:textColor="#F2F2F2"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="#FDFDFD"
            app:placeholderTextColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputDescriptionProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60000000"
                android:fontFamily="@font/amaranth"
                android:hint="Descrição"
                android:inputType="text|textShortMessage"
                android:textColor="#F2F2F2"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="#FFFFFF"
            app:hintTextColor="#FDFDFD"
            app:placeholderTextColor="#FFFFFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputValueProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60000000"
                android:fontFamily="@font/amaranth"
                android:hint="Valor"
                android:inputType="number|numberDecimal"
                android:textColor="#F2F2F2"
                android:textColorHint="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="#242AA2"
            android:drawableLeft="@drawable/add_24px"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/amaranth"
            android:text="Cadastrar"
            android:textColorLink="#182EF2" />

        <Button
            android:id="@+id/listIntentButton"
            style="@style/Widget.Material3.FloatingActionButton.Primary"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:backgroundTint="#49206D"
            android:drawableLeft="@drawable/checklist_24px"
            android:drawableTint="#FFFFFF"
            android:fontFamily="@font/amaranth"
            android:text="Listar Produtos"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>